{
    "manifest_version": 2,
    
    "name": "ReloadCSS",
    "description": "A simple toolbar button that allows you to quickly reload your stylesheets without reloading the whole page.",
    "version": "1.0",
    
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    
    "browser_action": {
        "default_icon": {
            "19": "icons/Icon-19.png",
            "38": "icons/Icon-38.png"
        },
        "default_title": "ReloadCSS"
    },
    
    "icons": {
        "128": "icons/Icon.png"
    },
    
    "permissions": [
        "activeTab"
    ]
}